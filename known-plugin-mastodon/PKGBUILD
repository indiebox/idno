developer=https://nxd4n.nixekinder.be
url=https://github.com/danito/KnownMastodon
maintainer="http://indiecomputing.com/"
pkgname=$(basename $(pwd))
_plugin=${pkgname/known-plugin-/}
pkgver=0.4.1
pkgrel=1
pkgdesc="Syndicate your status to Mastodon"
arch=('any')
license=("Unknown")
source=("git+http://github.com/danito/KnownMastodon.git#branch=master")
depends=(
    'known'
)
makedepends=(
    'git'
    'rsync'
)
options=('!strip')
sha512sums=('SKIP')

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m644 ${startdir}/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Icons
    # mkdir -p ${pkgdir}/srv/http/_appicons/${pkgname}
    # install -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/srv/http/_appicons/${pkgname}/

# Source
    mkdir -p ${pkgdir}/usr/share/${pkgname}

    rsync -a --exclude .git ${srcdir}/ $pkgdir/usr/share/${pkgname}/
}
