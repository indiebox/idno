developer=https://nxd4n.nixekinder.be
url=http://www.marcus-povey.co.uk
maintainer="http://indiecomputing.com/"
pkgname=$(basename $(pwd))
_plugin=${pkgname/known-plugin-/}
pkgver=1.0
pkgrel=3
pkgdesc="Cross-post content to LinkedIn"
arch=('any')
license=("GPL2")
source=("git+https://github.com/mapkyca/KnownLinkedin#branch=master")
releasepage=('https://github.com/mapkyca/KnownLinkedin#branch=master')
depends=(
    'known'
)
makedepends=(
    'git'
    'rsync'
)
options=('!strip')
sha512sums=('SKIP')

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m644 ${startdir}/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Icons
    # mkdir -p ${pkgdir}/srv/http/_appicons/${pkgname}
    # install -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/srv/http/_appicons/${pkgname}/

# Source
    mkdir -p ${pkgdir}/usr/share/${pkgname}

    rsync -a --exclude .git ${srcdir}/KnownLinkedin/LinkedIn $pkgdir/usr/share/${pkgname}/
}
