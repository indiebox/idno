developer=https://withknown.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=0.8.5
pkgrel=3
pkgdesc="Known: Publishing platform for everyone"
arch=('any')
license=('Apache')
groups=()
depends=()
source=( "http://assets.withknown.com/releases/known-$pkgver.tgz" )
options=('!strip')
sha512sums=('60c2f2a956c3c14b18b97572a78ce7c3063cad4feabf948d459aef395573fc889ecf82bb7ac42fca2d24ce8590c691b0ffed4c8a98603ec3e0547e88c31c9917')

package() {
# Manifest
    mkdir -p $pkgdir/var/lib/ubos/manifests
    install -m0644 $startdir/ubos-manifest.json $pkgdir/var/lib/ubos/manifests/${pkgname}.json

# Icons
    mkdir -p $pkgdir/srv/http/_appicons/$pkgname
    install -m644 $startdir/appicons/{72x72,144x144}.png $pkgdir/srv/http/_appicons/$pkgname/

# Templates
    mkdir -p $pkgdir/usr/share/${pkgname}/tmpl
    install -m755 $startdir/tmpl/{config.ini,htaccess}.tmpl $pkgdir/usr/share/${pkgname}/tmpl/

# Data directory
    mkdir -p $pkgdir/var/lib/${pkgname}

# Code
    mkdir -p $pkgdir/usr/share/${pkgname}/idno
    cp -r -p $srcdir/* $pkgdir/usr/share/${pkgname}/idno/
}
